\RequirePackage{amsmath}
\RequirePackage{amssymb}
\RequirePackage{geometry}
\RequirePackage{lipsum}
\RequirePackage{tikz}
\RequirePackage{framed}
\geometry{
    paper=a5paper,
    landscape
}


\definecolor{shadecolor}{rgb}{0.9,0.9,0.9}


\renewcommand{\part}[1]{
    \addtocounter{part}{1}
    \clearpage
    \vspace*{\fill}
       \begin{shaded}
    \begin{center}
    {\scshape \huge
      Part \roman{part}\\[20pt]
      #1
    }
    \end{center}
      \end{shaded}
    \vfill
}


\renewcommand{\section}[1]{
    \clearpage
    \vspace*{\fill}
    \begin{center}
    \Huge\textsc{#1}
    \end{center}
    \vfill
}

\newcommand{\slideheading}[1]{
{{\flushleft\Huge\textsc{#1}}}\hfill \break}%\par\noindent{}}

\newenvironment{slide}[1][]{
    \clearpage
    \if\relax\detokenize{#1}\relax
        
    \else
        \noindent{}
        \slideheading{#1}
    \fi
    \vspace*{\fill}%
    \par\noindent{}%
}{
    \vfill 
}
